@using MVCHoldem.Web.ViewModels.Home
@model MostRecentPostViewModel
<div class="row vertical-align">
    <div class="col-sm-10">
        <h2>@Model.Title</h2>
        <p>@Model.Description</p>
        <p>Posted on: @Html.DisplayFor(x => Model.PostedOn) by @Model.Author</p>
    </div>
    <div class="col-sm-2">
        @Html.ActionLink("Read more...", "Details", "Post",
            new { id = Model.Id },
            new { @class = "btn btn-success" })
    </div>
</div>

