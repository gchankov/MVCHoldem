@using MVCHoldem.Web.ViewModels.Home
@model HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET MVC Texas Hold'em Blog</h1>
    <p class="lead">Get the best for your game.</p>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h3>Most recent posts:</h3>
        </div>
    </div>
    @foreach (var mostRecentPost in Model.MostRecentPosts)
    {
        @Html.Partial("_MostRecentPostPartial", mostRecentPost);
    }
</div>